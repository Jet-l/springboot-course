<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisexample.example05.AddressMapper05">
    <resultMap id="addressDTOResultMap" type="com.example.mybatisexample.example05.AddressDTO05">
        <result column="id" property="id"></result>
        <result column="detail" property="detail"></result>
        <association property="user"
                     columnPrefix="u_"
                     javaType="com.example.mybatisexample.entity.User" autoMapping="true"></association>
    </resultMap>
    <select id="listAddressDTOs" resultMap="addressDTOResultMap">
        select a.*,
               u.id u_id,
               u.name u_name,
               u.company u_company,
               u.create_time u_createTime
        from address a join user u on u.id = a.user_id
        where a.detail=#{detail}
    </select>
</mapper>